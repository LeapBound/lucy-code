{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://lucy-orchestrator.local/schemas/plan.schema.json",
  "title": "Execution Plan",
  "type": "object",
  "required": ["plan_id", "task_id", "version", "goal", "constraints", "steps"],
  "properties": {
    "plan_id": {"type": "string", "minLength": 1},
    "task_id": {"type": "string", "minLength": 1},
    "version": {"type": "integer", "minimum": 1},
    "goal": {"type": "string", "minLength": 1},
    "assumptions": {
      "type": "array",
      "items": {"type": "string"}
    },
    "constraints": {
      "type": "object",
      "required": ["allowed_paths", "forbidden_paths", "max_files_changed"],
      "properties": {
        "allowed_paths": {"type": "array", "minItems": 1, "items": {"type": "string"}},
        "forbidden_paths": {"type": "array", "items": {"type": "string"}},
        "max_files_changed": {"type": "integer", "minimum": 1}
      },
      "additionalProperties": false
    },
    "questions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "question", "required", "status"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "question": {"type": "string", "minLength": 1},
          "required": {"type": "boolean"},
          "status": {"type": "string", "enum": ["open", "answered"]},
          "answer": {"type": ["string", "null"]}
        },
        "additionalProperties": false
      }
    },
    "steps": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "type", "title", "status"],
        "properties": {
          "id": {"type": "string", "minLength": 1},
          "type": {"type": "string", "enum": ["code", "test"]},
          "title": {"type": "string", "minLength": 1},
          "command": {"type": ["string", "null"]},
          "status": {"type": "string", "enum": ["pending", "running", "completed", "failed"]}
        },
        "additionalProperties": false
      }
    },
    "approval_gate": {
      "type": "object",
      "required": ["required_before_run", "required_before_commit"],
      "properties": {
        "required_before_run": {"type": "boolean"},
        "required_before_commit": {"type": "boolean"}
      },
      "additionalProperties": false
    },
    "metadata": {
      "type": "object",
      "required": ["created_at", "created_by"],
      "properties": {
        "created_at": {"type": "string"},
        "created_by": {"type": "string", "minLength": 1}
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}
